# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

GET     /users                      controllers.HomeController.listUsers
GET     /enhancedUsers              controllers.HomeController.listEnhanced

GET     /inputUser                  controllers.HomeController.getAddUserForm
POST    /inputUser                  controllers.HomeController.addUser

GET     /inputEnhancedUser          controllers.HomeController.serveAddEnhancedUserForm
POST    /inputEnhancedUser          controllers.HomeController.addEnhanced

GET     /updateItem                 controllers.HomeController.updateItem(id: Long, field: String)
GET     /updateRecover              controllers.HomeController.justDelete(id: Long)

GET     /deleteUser                 controllers.HomeController.deleteUser(id: Long)
GET     /getUser                    controllers.HomeController.getUser(id: Long)

GET     /login                      controllers.HomeController.loginForm
POST    /login                      controllers.HomeController.login
GET     /singleUser                 controllers.HomeController.singleUser(sessionKey: String)

# Venture routes

GET     /inputVenture               controllers.HomeController.serveNewVentureForm
POST    /inputVenture               controllers.HomeController.addNewVenture
GET     /listVentures               controllers.HomeController.listVentures(sessionKey: String)


GET     /javascriptRoutes           controllers.AjaxController.javascriptRoutes
GET     /testjs                     controllers.HomeController.searchForm

# Ajax calls
GET     /getFilteredVentures        controllers.HomeController.updateSearch(string: String)
GET     /getPrice                   controllers.HomeController.getPrice(id: Long)
GET     /getNominal                 controllers.HomeController.getNominal(id: Long)

# tests
GET     /testGetNominal             controllers.HomeController.testGetNominal
GET     /testAkka                   controllers.HomeController.testAkka
POST    /testAkka                   controllers.HomeController.testAkkaForm(testString: String)
GET     /testMoreAkka               controllers.HomeController.testMoreAkka(bidNominal: Long, ventureId: Long, testString: String)

# Akka calls
GET     /bidOnVenture               controllers.HomeController.bidOnVenture(ventureId: Long, sessionKey: String)
POST    /bidOnVentureAkka           controllers.HomeController.bidOnVentureAkka(ventureId: Long, sessionKey: String)
GET     /executeBid                 controllers.HomeController.executeBid(ventureId: Long, bidId: Long, sessionKey: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
GET     /javascripts/*file          controllers.Assets.at(path="/public/javascripts", file)