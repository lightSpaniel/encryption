# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

# User routes

GET     /inputEnhancedUser          controllers.UserController.serveAddUserForm(message: String)
POST    /inputEnhancedUser          controllers.UserController.addUser

GET     /deleteUser                 controllers.UserController.deleteUser(id: Long)

GET     /login                      controllers.UserController.loginForm
POST    /login                      controllers.UserController.login
GET     /singleUser                 controllers.UserController.singleUser(sessionKey: String)

# Venture routes
GET     /inputVenture               controllers.VentureController.serveNewVentureForm
POST    /inputVenture               controllers.VentureController.addVenture
GET     /singleVenture              controllers.VentureController.singleVenture(ventureId: Long)


# Bid routes
POST    /bidOnVenture               controllers.BidController.startBid(ventureId: Long, price: Double, sectorId: Long, sessionKey: String)

# Ajax calls
GET     /getPrice                   controllers.HomeController.getPrice(id: Long)
GET     /getNominal                 controllers.HomeController.getNominal(id: Long)
GET     /getSectorName              controllers.HomeController.getSectorName(id: Long)




# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
GET     /javascripts/*file          controllers.Assets.at(path="/public/javascripts", file)